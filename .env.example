LOGS_DESTINATION="./backup-logs/"

UPLOAD_LOCATION="/var/vaultwarden/vw-data"

# Container runtime command (docker, podman, nerdctl, etc.)
CONTAINER_RUNTIME="docker"
VAULTWARDEN_CONTAINER="vaultwarden"

BORG_REPO="ssh://user@backup-server.example.com:22/~/backups"
BORG_PASSPHRASE="your-secure-passphrase-here"

BORG_RSH="ssh -i /path/to/your/ssh-key"

KEEP_DAILY_BACKUPS=7
KEEP_WEEKLY_BACKUPS=4
KEEP_MONTHLY_BACKUPS=6

FROM_EMAIL="vaultwarden-backup@example.com"
FROM_NAME="Vaultwarden Backup Alerts"

TO_EMAIL="admin@example.com"
TO_NAME="System Administrator"

PROGRAM_NAME="Vaultwarden"

LOGO_FORMAT="webp"
LOGO_PATH="./logo.webp"

INSTANCE_URL="https://vault.example.com"

EMAIL_TEMPLATE="./email.html"
